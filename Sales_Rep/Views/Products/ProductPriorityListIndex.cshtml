@model IEnumerable<Sales_Rep.Models.tblProduct>

@{
    ViewBag.Title = "ProductPriorityListIndex";
}

<h2>Product Priority List</h2>
@using (Html.BeginForm("ProductPriorityListIndex", "Product"))
{
    <div class="container">
        <div class="row">
            <div class="col-6">
                <input type="text" id="searchString" name="searchString" class="form-control">
                @*@Html.EditorFor("searchString", new { htmlAttributes = new { @class = "form-control" } })*@
            </div>
            <div class="col-6">
                <input type="submit" value="Search" class="btn btn-info glyphicon-search" />
            </div>
        </div>
    </div>



}
<br />

<table class="table">
    <tr>
        
        <th>
            @Html.Label("Product Code")
        </th>
       
        <th>
            @Html.Label("Product Name")
        </th>
        <th>
            @Html.Label("Price")
        </th>
        
        <th>
            @Html.Label("On Hand Qty")
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.pcode)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.pdesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.qty)
            </td>
           
           
        </tr>
    }

</table>
